<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="1dp"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/chexiang_1_iv1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/icon_closed_locked"
                />

            <ImageView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@mipmap/icon_closed_locked"
                android:id="@+id/chexiang_1_iv2" />

            <ImageView
                android:id="@+id/chexiang_1_iv3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/icon_closed_locked" />

            <ImageView
                android:id="@+id/chexiang_1_iv4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/icon_closed_locked" />

            <ImageView
                android:id="@+id/chexiang_1_iv5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/icon_closed_locked" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chexiang_1_iv6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/icon_closed_locked"
            />
        <ImageView
            android:id="@+id/chexiang_1_iv7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/icon_closed_locked"
            />
        <ImageView
            android:id="@+id/chexiang_1_iv8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/icon_closed_locked"
            />
        <ImageView
            android:id="@+id/chexiang_1_iv9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/icon_closed_locked"
            />
        <ImageView
            android:id="@+id/chexiang_1_iv10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/icon_closed_locked"
            />
    </LinearLayout>



</LinearLayout>
